@page
@model AplicacionNetRazor.Pages.Cursos.EditarModel
@{
    ViewData["Title"] = "Crear nuevo curso";
}

<div class="card">
    <div class="card-header">
        <h1 class="text-center"> Editar Curso</h1>
    </div>
    <div class="card-body">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Se envia campo oculto -->
            <input type="hidden" asp-for="Curso.Id" />

            <div class="container" style="padding: 30px">
                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <label asp-for="Curso.NombreCurso"></label>
                        </div>
                        <div class="col-sm-6">
                            <input asp-for="Curso.NombreCurso" class="form-control" />
                        </div>
                        <span asp-validation-for="Curso.NombreCurso" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <label asp-for="Curso.CantidadClase"></label>
                        </div>
                        <div class="col-sm-6">
                            <input asp-for="Curso.CantidadClase" class="form-control" />
                        </div>
                        <span asp-validation-for="Curso.CantidadClase" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <label asp-for="Curso.Precio"></label>
                        </div>
                        <div class="col-sm-6">
                            <input asp-for="Curso.Precio" class="form-control" />
                        </div>
                        <span asp-validation-for="Curso.Precio" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2" offset-sm-2>
                            <input type="submit" value="Editar" class="btn btn-primary from-control" />
                        </div>
                        <div class="col-sm-4">
                            <a asp-page="Index" class="btn btn-success form-control">Volver a lista</a>
                        </div>
                    </div>
                </div>

            </div>
        </form>
    </div>
</div>

